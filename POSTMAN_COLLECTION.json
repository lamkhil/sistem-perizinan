{
  "info": {
    "name": "Sistem Perizinan API",
    "description": "API Testing Collection for Sistem Perizinan",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "session_cookie",
      "value": "",
      "type": "string"
    },
    {
      "key": "csrf_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Get Session)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Extract session cookie from response",
                  "const cookies = pm.response.headers.get('Set-Cookie');",
                  "if (cookies) {",
                  "    const sessionMatch = cookies.match(/laravel_session=([^;]+)/);",
                  "    if (sessionMatch) {",
                  "        pm.environment.set('session_cookie', 'laravel_session=' + sessionMatch[1]);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "email",
                  "value": "admin@dpmptsp.surabaya.go.id",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "Admin@2025",
                  "type": "text"
                },
                {
                  "key": "_token",
                  "value": "{{csrf_token}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications API",
      "item": [
        {
          "name": "Get Notifications",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});",
                  "",
                  "pm.test('Has notifications array', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('notifications');",
                  "    pm.expect(jsonData.notifications).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Has count field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('count');",
                  "    pm.expect(jsonData.count).to.be.a('number');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "{{session_cookie}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications"]
            }
          }
        },
        {
          "name": "Update Notification Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has success field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success');",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "});",
                  "",
                  "pm.test('Response has permohonan data', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('permohonan');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "X-CSRF-TOKEN",
                "value": "{{csrf_token}}"
              },
              {
                "key": "Cookie",
                "value": "{{session_cookie}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Menunggu\",\n  \"menghubungi\": \"2024-12-20\",\n  \"keterangan_menghubungi\": \"Sudah dihubungi via telepon\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notifications/1/update",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications", "1", "update"]
            }
          }
        },
        {
          "name": "Update Notification - Invalid Status (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 422 (Validation Error)', function () {",
                  "    pm.response.to.have.status(422);",
                  "});",
                  "",
                  "pm.test('Response has validation errors', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('errors');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "X-CSRF-TOKEN",
                "value": "{{csrf_token}}"
              },
              {
                "key": "Cookie",
                "value": "{{session_cookie}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"InvalidStatus\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notifications/1/update",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications", "1", "update"]
            }
          }
        }
      ]
    }
  ]
}

